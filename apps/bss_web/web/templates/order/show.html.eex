<h2>Show order</h2>

<ul>

  <li>
    <strong>First name:</strong>
    <%= @order.first_name %>
  </li>

  <li>
    <strong>Last name:</strong>
    <%= @order.last_name %>
  </li>

  <li>
    <strong>Address line 1:</strong>
    <%= @order.address_line_1 %>
  </li>

  <li>
    <strong>Address line 2:</strong>
    <%= @order.address_line_2 %>
