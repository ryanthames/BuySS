  <li>
    <strong>City:</strong>
    <%= @order.city %>
  </li>

  <li>
    <strong>State:</strong>
    <%= @order.state %>
  </li>

  <li>
    <strong>Zip:</strong>
    <%= @order.zip %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @order.email %>
